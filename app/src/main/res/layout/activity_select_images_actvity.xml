<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MVP_SelectImages.SelectImagesActivity"
    android:orientation="vertical"
    android:background="@color/bg_silver">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_choose_role">
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/iv_back"
                    android:src="@mipmap/back"/>
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_icon"
                    android:src="@mipmap/add"/>
                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:textColor="@color/white"
                    android:text="@string/add"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toLeftOf="@+id/iv_icon"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zavosh.software.DrDandoon.CustomViews.MyButton
                android:id="@+id/tooth_sample"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_button_app"
                android:text="@string/sample"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
            <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_11sdp"
                android:gravity="right|center"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="@string/setImageTooth"
                android:maxLines="1"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                android:background="@color/white">
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_weight="1"
                    android:id="@+id/image3"
                    android:scaleType="centerCrop"/>
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:id="@+id/image2"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_90sdp"
                    android:id="@+id/image1"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.zavosh.software.DrDandoon.CustomViews.MyButton
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/bg_button_app"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/sample"
                    android:id="@+id/opg_sample"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="right|center"
                    android:padding="@dimen/_5sdp"
                    android:maxLines="1"
                    android:text="@string/setImageToothOpg"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center">
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_opg"
                    android:src="@mipmap/opg_icon"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <com.zavosh.software.DrDandoon.CustomViews.MyEditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@color/white"
            android:hint="@string/description"
            android:gravity="top"
            android:textDirection="anyRtl"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:id="@+id/ev_description"
            android:backgroundTint="@color/white"/>

        <com.zavosh.software.DrDandoon.CustomViews.MyButton
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_button_app"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:text="@string/send"
            android:id="@+id/btn_send"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/bg_silver"
        android:id="@+id/myProgressBar"
        android:visibility="gone">
        <com.eyalbira.loadingdots.LoadingDots
            android:id="@+id/loaderDots"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:LoadingDots_auto_play="true"

            app:LoadingDots_dots_color="@color/end"
            app:LoadingDots_dots_count="4"
            app:LoadingDots_dots_size="@dimen/_12sdp"
            app:LoadingDots_dots_space="@dimen/_3sdp"

            app:LoadingDots_loop_duration="1000"
            app:LoadingDots_loop_start_delay="120"

            app:LoadingDots_jump_duration="400"
            app:LoadingDots_jump_height="@dimen/_10sdp"/>
        <com.zavosh.software.DrDandoon.CustomViews.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:gravity="center"
            android:textColor="@color/end"
            android:id="@+id/tv_message"
            android:text="@string/pleaseWait"/>
        <com.zavosh.software.DrDandoon.CustomViews.MyButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_button_app"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:text="@string/retry"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:visibility="invisible"
            android:id="@+id/retry"
            android:layout_marginTop="@dimen/_15sdp"
            android:cursorVisible="false"/>
    </LinearLayout>


</RelativeLayout>