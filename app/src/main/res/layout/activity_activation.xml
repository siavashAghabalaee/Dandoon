<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MVP_Activation.ActivationActivity"
    android:background="@drawable/bg_choose_role">
    <LinearLayout
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/back">
        <com.zavosh.software.DrDandoon.CustomViews.MyImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/back"/>
    </LinearLayout>

    <com.zavosh.software.DrDandoon.CustomViews.MyImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@mipmap/tooth"
        android:scaleType="centerCrop"/>
    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
        android:id="@+id/tv_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_3sdp"
        android:background="@drawable/bg_button_white"
        android:layout_below="@+id/tv_appName"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLine"></LinearLayout>
    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
        android:id="@+id/tv_activation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_below="@id/linearLine"
        android:layout_centerHorizontal="true"
        android:text="@string/activation"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activation"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:theme="@style/TextLabel"
        android:layout_marginTop="@dimen/_10sdp">
        <com.zavosh.software.DrDandoon.CustomViews.MyEditText
            android:id="@+id/ev_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textDirection="anyRtl"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:hint="@string/enter_activation_code"
            android:layout_marginTop="@dimen/_5sdp"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/underlineCode"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/textInputLayoutCode"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@id/underlineCode">
        <com.zavosh.software.DrDandoon.CustomViews.MyButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/btn_activation"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_button_border_white"
            android:textColor="@color/white"
            android:text="@string/login"
            android:textSize="@dimen/_10sdp"/>
        <com.zavosh.software.DrDandoon.CustomViews.MyProgressBarWhite
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/loader"/>

    </RelativeLayout>
</RelativeLayout>