<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zavosh.software.DrDandoon.Activities.MVP_Support.SupportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_choose_role">
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/iv_back"
                    android:src="@mipmap/back"/>
                <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_icon"
                    android:src="@mipmap/support"/>
                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:textColor="@color/white"
                    android:text="@string/support"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toLeftOf="@+id/iv_icon"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/bg_button_white"
            android:orientation="vertical">
            <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_13sdp"
                android:text="@string/subject"
                android:padding="@dimen/_5sdp"
                android:textDirection="anyRtl"/>
            <com.zavosh.software.DrDandoon.CustomViews.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:maxLines="2"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_button_silver"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textDirection="anyRtl"
                android:textSize="@dimen/_11sdp"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:textColor="@color/text_color"
                android:gravity="top"
                android:id="@+id/etv_subject"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/bg_button_white"
            android:orientation="vertical">
            <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_13sdp"
                android:text="@string/description"
                android:padding="@dimen/_5sdp"
                android:textDirection="anyRtl"/>
            <com.zavosh.software.DrDandoon.CustomViews.MyEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button_silver"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textDirection="anyRtl"
                android:textSize="@dimen/_11sdp"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:textColor="@color/text_color"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:id="@+id/etv_description"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center">
            <com.zavosh.software.DrDandoon.CustomViews.MyButton
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/call"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_app"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/btn_call"/>
            <com.zavosh.software.DrDandoon.CustomViews.MyButton
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/send"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_red_corner"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/btn_send"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/bg_silver"
        android:id="@+id/myProgressBar"
        android:visibility="gone">
        <com.eyalbira.loadingdots.LoadingDots
            android:id="@+id/loaderDots"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:LoadingDots_auto_play="true"

            app:LoadingDots_dots_color="@color/end"
            app:LoadingDots_dots_count="4"
            app:LoadingDots_dots_size="@dimen/_12sdp"
            app:LoadingDots_dots_space="@dimen/_3sdp"

            app:LoadingDots_loop_duration="1000"
            app:LoadingDots_loop_start_delay="120"

            app:LoadingDots_jump_duration="400"
            app:LoadingDots_jump_height="@dimen/_10sdp"/>
        <com.zavosh.software.DrDandoon.CustomViews.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:gravity="center"
            android:textColor="@color/end"
            android:id="@+id/tv_message"/>
        <com.zavosh.software.DrDandoon.CustomViews.MyButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_button_app"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:text="@string/retry"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:visibility="invisible"
            android:id="@+id/retry"
            android:layout_marginTop="@dimen/_15sdp"/>
    </LinearLayout>
</RelativeLayout>
