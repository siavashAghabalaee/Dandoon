<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MVP_ChoosePatient.ChoosePatientActivity"
    android:background="@color/bg_silver"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_choose_role">
                <com.zavosh.software.dentist.dentist.CustomViews.MyImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_back"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/iv_filter"
                    android:padding="@dimen/_5sdp"
                    android:src="@mipmap/filter_icon"/>
                <com.zavosh.software.dentist.dentist.CustomViews.MyImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_icon"
                    android:src="@mipmap/add"/>
                <com.zavosh.software.dentist.dentist.CustomViews.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:textColor="@color/white"
                    android:text="@string/add"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toLeftOf="@+id/iv_icon"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"/>
    </LinearLayout>

    <com.zavosh.software.dentist.dentist.CustomViews.MyProgressBarBlue
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/loader"
        android:visibility="gone"/>

    <com.zavosh.software.dentist.dentist.CustomViews.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:textColor="@color/end"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:id="@+id/tv_monitor"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        fab:menu_fab_size="normal"

        fab:menu_showShadow="true"
        fab:menu_shadowColor="#47000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="2dp"

        fab:menu_colorNormal="@color/end"
        fab:menu_colorPressed="@color/start"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@mipmap/menu_icon"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="@color/text_color"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="@dimen/_15sdp"
        fab:menu_labels_colorNormal="@color/fab_pressed"
        fab:menu_labels_colorPressed="@color/fab_colorRipple"
        fab:menu_labels_colorRipple="@color/start"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"

        fab:menu_openDirection="up"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/profile_icone"
            fab:fab_size="mini"
            fab:fab_label="@string/profile"
            fab:fab_colorNormal="@color/end"
            fab:fab_colorPressed="@color/start"
            fab:fab_colorRipple="@color/text_color"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_list_icon"
            fab:fab_size="mini"
            fab:fab_label="@string/myPatientList"
            fab:fab_colorNormal="@color/end"
            fab:fab_colorPressed="@color/start"
            fab:fab_colorRipple="@color/text_color"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_icon"
            fab:fab_size="mini"
            fab:fab_label="@string/home"
            fab:fab_colorNormal="@color/end"
            fab:fab_colorPressed="@color/start"
            fab:fab_colorRipple="@color/text_color"/>

    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>