<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MVP_OrderDetail.OrderDetailActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_choose_role">
            <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/iv_back"
                android:src="@mipmap/back"/>
            <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/iv_icon"
                android:src="@mipmap/add"/>
            <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_logo"
                android:textColor="@color/white"
                android:text="@string/orderDetail"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:layout_toLeftOf="@+id/iv_icon"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_silver">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/doctorsOpinion"
                        android:textDirection="anyRtl"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/doctorText"
                        android:textDirection="anyRtl"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@color/white">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/images"
                        android:textDirection="anyRtl"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:background="@color/white">
                            <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_weight="1"
                                android:id="@+id/image3"
                                android:scaleType="centerCrop"/>
                            <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_90sdp"
                                android:id="@+id/image2"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"/>
                            <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_90sdp"
                                android:id="@+id/image1"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@color/white"
                    >
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:text="@string/opg"
                        android:textDirection="anyRtl"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:gravity="center|right"
                                    android:id="@+id/tv_city"
                                    android:paddingRight="@dimen/_5sdp"/>
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:textDirection="anyRtl"
                                    android:text="@string/city"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_5sdp"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:gravity="center|right"
                                    android:id="@+id/tv_ageType"
                                    android:paddingRight="@dimen/_5sdp"/>
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:textDirection="anyRtl"
                                    android:text="@string/ageType"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_5sdp"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:gravity="center|right"
                                    android:id="@+id/tv_toothNumber"
                                    android:paddingRight="@dimen/_5sdp"/>
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:textDirection="anyRtl"
                                    android:text="@string/toothNumber"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_5sdp"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:gravity="center|right"
                                    android:id="@+id/tv_typeTitle"
                                    android:paddingRight="@dimen/_5sdp"/>
                                <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/_10sdp"
                                    android:textDirection="anyRtl"
                                    android:text="@string/group"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/_5sdp"/>


                            </LinearLayout>

                        </LinearLayout>
                        <android.support.v7.widget.CardView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_gravity="center">
                            <com.zavosh.software.DrDandoon.CustomViews.MyImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/iv_opg"
                                android:src="@mipmap/opg_icon"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@color/white">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/questionOne"
                        android:textDirection="anyRtl"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/questionOne"
                        android:textDirection="anyRtl"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@color/white">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/painArea"
                        android:textDirection="anyRtl"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/questionTwo"
                        android:textDirection="anyRtl"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@color/white">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/painQuality"
                        android:textDirection="anyRtl"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/questionThree"
                        android:textDirection="anyRtl"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/_10sdp">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/painType"
                        android:textDirection="anyRtl"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/questionFour"
                        android:textDirection="anyRtl"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/_10sdp">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/haveTreatment1"
                        android:textDirection="anyRtl"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/questionFive"
                        android:textDirection="anyRtl"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@color/white">
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_13sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/drugsUsed"
                        android:textDirection="anyRtl"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <com.zavosh.software.DrDandoon.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/questionSix"
                        android:textDirection="anyRtl"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <com.zavosh.software.DrDandoon.CustomViews.MyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_button_app"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:text="@string/getInfoPatient"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/btn_buy"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/bg_silver"
        android:id="@+id/myProgressBar"
        android:visibility="gone">
        <com.eyalbira.loadingdots.LoadingDots
            android:id="@+id/loaderDots"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:LoadingDots_auto_play="true"

            app:LoadingDots_dots_color="@color/end"
            app:LoadingDots_dots_count="4"
            app:LoadingDots_dots_size="@dimen/_12sdp"
            app:LoadingDots_dots_space="@dimen/_3sdp"

            app:LoadingDots_loop_duration="1000"
            app:LoadingDots_loop_start_delay="120"

            app:LoadingDots_jump_duration="400"
            app:LoadingDots_jump_height="@dimen/_10sdp"/>
        <com.zavosh.software.DrDandoon.CustomViews.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:gravity="center"
            android:textColor="@color/end"
            android:id="@+id/tv_message"/>
        <com.zavosh.software.DrDandoon.CustomViews.MyButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_button_app"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:text="@string/retry"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:visibility="invisible"
            android:id="@+id/retry"
            android:layout_marginTop="@dimen/_15sdp"/>
    </LinearLayout>
</RelativeLayout>